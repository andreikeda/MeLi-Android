<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Text.Search" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="Text.Search.Label" parent="Text.Search">
        <item name="android:textSize">@dimen/font_h6</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Search.Title" parent="Text.Search">
        <item name="android:textSize">@dimen/font_h6</item>
    </style>
    <style name="Text.Search.Price">
        <item name="android:textSize">@dimen/font_h4</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

</resources>
